ifeq ($(TARGET_PROVIDES_CAMERA_HAL),true)

LOCAL_PATH := $(call my-dir)
include $(CLEAR_VARS)

ifneq ($(TARGET_DISABLE_ISO_MODE_1600),true)
    LOCAL_CFLAGS += -DISO_MODE_1600
endif

ifneq ($(TARGET_DISABLE_ISO_MODE_HJR),true)
    LOCAL_CFLAGS += -DISO_MODE_HJR
endif

ifeq ($(TARGET_NEED_SAMSUNG_CMD_1509),true)
    LOCAL_CFLAGS += -DMAGIC_CMD_1509
endif

ifeq ($(TARGET_PARAM_SET_NEED_PREVIEW_STOP),true)
    LOCAL_CFLAGS += -DPARAM_SET_STOP_PREVIEW
endif

ifeq ($(TARGET_NEED_EXPOSURE_COMP_FIX),true)
    LOCAL_CFLAGS += -DEXPOSURE_COMP_FIX
endif

ifeq ($(TARGET_NEED_DISABLE_FACE_DETECTION_BACK),true)
    LOCAL_CFLAGS += -DDISABLE_FACE_DETECTION_BACK
endif

LOCAL_SRC_FILES := \
    CameraWrapper.cpp

LOCAL_SHARED_LIBRARIES := \
    libhardware liblog libcamera_client libutils

LOCAL_MODULE_PATH := $(TARGET_OUT_SHARED_LIBRARIES)/hw
LOCAL_MODULE := camera.msm8960
LOCAL_MODULE_TAGS := optional

include $(BUILD_SHARED_LIBRARY)

endif
